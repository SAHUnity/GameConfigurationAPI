# Basic routing for Game Configuration API
RewriteEngine On

# API Routes - Essential only
RewriteRule ^api/v1/config/([^/]+)/?$ api/v1/config.php?game_id=$1 [L,QSA]
RewriteRule ^api/v1/config/([^/]+)/([^/]+)/?$ api/v1/config.php?game_id=$1&key=$2 [L,QSA]
RewriteRule ^api/v1/admin/?$ api/v1/admin/index.php [L,QSA]
RewriteRule ^api/v1/admin/([^/]+)/?$ api/v1/admin/$1.php [L,QSA]
RewriteRule ^admin/?$ admin/index.php [L,QSA]
RewriteRule ^admin/([^/]+)/?$ admin/$1.php [L,QSA]
RewriteRule ^game-api/admin/?$ api/v1/admin/index.php [L,QSA]
RewriteRule ^game-api/admin/([^/]+)/?$ api/v1/admin/$1.php [L,QSA]

# Directory index
DirectoryIndex index.php index.html