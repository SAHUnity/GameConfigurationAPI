# Game Configuration API - Environment Configuration
# Copy this file to .env and update with your values

# Environment Settings
ENVIRONMENT=production
# Set to 'development' for local development, 'production' for live deployment

# Database Configuration
DB_HOST=localhost
DB_USER=your_db_username
DB_PASS=your_strong_db_password_here
DB_NAME=your_db_name

# Application Settings
BASE_URL=https://yourdomain.com
APP_NAME=Game Configuration API

# Security - CRITICAL: Change these values for production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=use_very_strong_password_here
# Password must be at least 12 characters with mixed case, numbers, and symbols

# Logging Configuration
# Set to 'true' to enable, 'false' to disable
ENABLE_API_LOGGING=true
ENABLE_SECURITY_LOGGING=true

# CORS Settings (comma-separated list of allowed origins)
# Examples:
# Single domain: https://yourdomain.com
# Multiple domains: https://yourdomain.com,https://subdomain.yourdomain.com
# With WWW: https://yourdomain.com,https://www.yourdomain.com
# Development: http://localhost:3000,https://localhost:3000
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Headers (advanced)
# Set to 'true' to enable HSTS (requires valid SSL certificate)
ENABLE_HSTS=true

# Rate Limiting
# API requests per minute per IP
API_RATE_LIMIT=60
# Login attempts per 5 minutes
LOGIN_RATE_LIMIT=10

# Session Configuration
# Session timeout in seconds (3600 = 1 hour)
SESSION_TIMEOUT=3600

# Database Security
# Set to 'true' to enforce SSL database connections
DB_SSL_REQUIRED=true

# Backup Configuration
# Set to 'true' to enable automatic backups
ENABLE_AUTO_BACKUP=false
BACKUP_RETENTION_DAYS=30

# Monitoring
# Set to 'true' to enable security monitoring
ENABLE_SECURITY_MONITORING=true
# Email for security alerts
SECURITY_ALERT_EMAIL=admin@yourdomain.com